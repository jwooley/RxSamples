<Window x:Class="MouseMoveSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MouseMoveSample">
    <Canvas>
        <TextBlock x:Name="TopText" Text="Rx Rocks!" />
        <Image x:Name="image2" 
               Source="Logo.png"
               Width="100"
               Height="100"
               Canvas.Left="0"
               Canvas.Top="25" />
        <Image x:Name="image3" 
               Source="Logo.png"
               Width="100"
               Height="100"
               Canvas.Left="0"
               Canvas.Top="25"
               Opacity=".25"/>
        <Image x:Name="image" 
               Source="Rx_symbol.png"
               Width="100"
               Height="100"
               Canvas.Left="0"
               Canvas.Top="25" />
    </Canvas>
</Window>
